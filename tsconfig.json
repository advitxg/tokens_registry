{
  "compilerOptions": {
    "moduleDetection": "force",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",   
    "lib": ["esnext"],
    "types": ["node"],
    "baseUrl": "./",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}