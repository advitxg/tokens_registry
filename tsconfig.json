{
  "compilerOptions": {
    "moduleDetection": "force",
    "skipLibCheck": true,
    "module": "Preserve",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "types": ["node"],
    "baseUrl": "./"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "bin/*.ts"]
}
